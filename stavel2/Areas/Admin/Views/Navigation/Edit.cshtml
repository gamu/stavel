@model stavel2.Models.NavigationElement
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@{
    Layout = "../Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#Text').removeAttr('class');
        $('#Text').addClass('form-control');
        $('#Url').removeAttr('class');
        $('#Url').addClass('form-control');
        $('#Tag').removeAttr('class');
        $('#Tag').addClass('form-control');
    })
</script>

@using (Html.BeginForm(new {role="form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Редактирование пункта меню</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.Text)
            @Html.EditorFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Url)
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tag)
            @Html.EditorFor(model => model.Tag)
            @Html.ValidationMessageFor(model => model.Tag)
        </div>

        <p>
            <input type="submit" class="btn btn-success" value="Сохранить" />
        </p>
    </fieldset>
}
